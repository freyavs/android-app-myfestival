<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".HomeFragment">

    <data>
        <variable name="newsfeedHandler" type="android.view.View.OnClickListener" />
        <variable name="foodHandler" type="android.view.View.OnClickListener" />
        <variable name="lineupHandler" type="android.view.View.OnClickListener" />
        <variable name="mapHandler" type="android.view.View.OnClickListener" />
        <variable name="FestivalChooserHandler" type="android.view.View.OnClickListener" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/loading"
            android:textAlignment="center"
            android:textSize="200sp"
            android:visibility="@{viewModel.notLoading}"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:weightSum="10"
        android:visibility="@{viewModel.loading}">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/logo_view"
                android:padding="4dp"
                app:imageUrl="@{viewModel.logo}"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="@{viewModel.welcomeString}"
                android:textSize="35sp"
                app:layout_constraintTop_toTopOf="parent"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4">

            <androidx.gridlayout.widget.GridLayout
                android:id="@+id/GridLayout1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="@{viewModel.loading}"
                app:columnCount="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_rowWeight="1">
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/newsfeed_btn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="@{newsfeedHandler::onClick}"
                        android:textColor="?attr/colorPrimary"
                        app:backgroundTint="?attr/colorOnPrimary"
                        app:icon="@drawable/newsfeed_50dp"
                        app:iconTint="@color/colorAccent"
                        app:rippleColor="@color/backgroundColor"
                        app:shapeAppearance="@style/ShapeAppearance.MyFestival.Button.Home"
                        android:layout_weight="1"
                        android:insetLeft="0dp"
                        android:insetTop="0dp"
                        android:insetRight="0dp"
                        android:insetBottom="0dp"
                        app:iconGravity="textStart"
                        android:layout_margin="10dp"/>


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/lineup_btn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="@{lineupHandler::onClick}"
                        android:padding="10dp"
                        android:textColor="?attr/colorPrimary"
                        app:backgroundTint="?attr/colorOnPrimary"
                        app:icon="@drawable/lineup_50dp"
                        app:iconTint="@color/colorAccent"
                        app:rippleColor="@color/backgroundColor"
                        app:shapeAppearance="@style/ShapeAppearance.MyFestival.Button.Home"
                        android:layout_weight="1"
                        android:insetLeft="0dp"
                        android:insetTop="0dp"
                        android:insetRight="0dp"
                        android:insetBottom="0dp"
                        app:iconGravity="textStart"
                        android:layout_margin="10dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_rowWeight="1">
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/food_btn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="@{foodHandler::onClick}"
                        android:padding="10dp"
                        android:textColor="?attr/colorPrimary"
                        app:backgroundTint="?attr/colorOnPrimary"
                        app:icon="@drawable/food"
                        app:iconTint="@color/colorAccent"
                        app:rippleColor="@color/backgroundColor"
                        app:shapeAppearance="@style/ShapeAppearance.MyFestival.Button.Home"
                        android:layout_weight="1"
                        android:insetLeft="0dp"
                        android:insetTop="0dp"
                        android:insetRight="0dp"
                        android:insetBottom="0dp"
                        app:iconGravity="textStart"
                        android:layout_margin="10dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/map_btn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="@{mapHandler::onClick}"
                        android:padding="10dp"
                        android:textColor="?attr/colorPrimary"
                        app:backgroundTint="?attr/colorOnPrimary"
                        app:icon="@drawable/map_50dp"
                        app:iconTint="@color/colorAccent"
                        app:rippleColor="@color/backgroundColor"
                        app:shapeAppearance="@style/ShapeAppearance.MyFestival.Button.Home"
                        android:layout_weight="1"
                        android:insetLeft="0dp"
                        android:insetTop="0dp"
                        android:insetRight="0dp"
                        android:insetBottom="0dp"
                        app:iconGravity="textStart"
                        android:layout_margin="10dp"/>

                </LinearLayout>




            </androidx.gridlayout.widget.GridLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            >

            <com.google.android.material.button.MaterialButton
                android:id="@+id/lineup_btn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{FestivalChooserHandler::onClick}"
                android:padding="10dp"
                android:textColor="?attr/colorPrimary"
                android:text="FESTIVAL SELECTION"
                android:textSize="10dp"
                app:backgroundTint="?attr/colorOnPrimary"
                app:iconTint="@color/colorAccent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:rippleColor="@color/backgroundColor"
                app:shapeAppearance="@style/ShapeAppearance.MyFestival.Button.Home" />

        </LinearLayout>
    </LinearLayout>

    </RelativeLayout>
</layout>