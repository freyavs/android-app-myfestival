<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".HomeFragment">

    <data>
        <import type="android.view.View"/>
        <variable name="newsfeedHandler" type="android.view.View.OnClickListener" />
        <variable name="foodHandler" type="android.view.View.OnClickListener" />
        <variable name="lineupHandler" type="android.view.View.OnClickListener" />
        <variable name="mapHandler" type="android.view.View.OnClickListener" />
        <variable name="FestivalChooserHandler" type="android.view.View.OnClickListener" />
        <variable name="viewModel" type="be.ugent.myfestival.viewmodels.FestivalViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="35"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/roundCardView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                app:cardCornerRadius="50dp">

                <ImageView
                    android:id="@+id/logo_view"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="4dp"
                    android:scaleType="fitCenter"
                    android:visibility="@{viewModel.loading}" />
            </androidx.cardview.widget.CardView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{viewModel.welcomeString}"
                android:textAlignment="center"
                android:textSize="30sp"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="55"
            android:gravity="center"
            android:visibility="@{viewModel.loading}">

            <androidx.gridlayout.widget.GridLayout
                android:id="@+id/GridLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                app:columnCount="2">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/newsfeed_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    android:onClick="@{newsfeedHandler::onClick}"
                    android:padding="20dp"
                    app:backgroundTint="?attr/colorOnPrimary"
                    app:icon="@drawable/newsfeed_50dp"
                    app:iconGravity="textStart"
                    app:iconSize="70dp"
                    app:iconTint="@color/colorAccent"
                    app:rippleColor="@color/backgroundColor"
                    app:shapeAppearance="@style/ShapeAppearance.MyFestival.Button.Home" />


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/lineup_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    android:onClick="@{lineupHandler::onClick}"
                    android:padding="20dp"
                    app:backgroundTint="?attr/colorOnPrimary"
                    app:icon="@drawable/lineup_50dp"
                    app:iconGravity="textStart"
                    app:iconSize="70dp"
                    app:iconTint="@color/colorAccent"
                    app:rippleColor="@color/backgroundColor"
                    app:shapeAppearance="@style/ShapeAppearance.MyFestival.Button.Home" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/food_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    android:onClick="@{foodHandler::onClick}"
                    android:padding="20dp"
                    app:backgroundTint="?attr/colorOnPrimary"
                    app:icon="@drawable/food"
                    app:iconGravity="textStart"
                    app:iconSize="70dp"
                    app:iconTint="@color/colorAccent"
                    app:rippleColor="@color/backgroundColor"
                    app:shapeAppearance="@style/ShapeAppearance.MyFestival.Button.Home" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/map_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    android:onClick="@{mapHandler::onClick}"
                    android:padding="20dp"
                    app:backgroundTint="?attr/colorOnPrimary"
                    app:icon="@drawable/map_50dp"
                    app:iconGravity="textStart"
                    app:iconSize="70dp"
                    app:iconTint="@color/colorAccent"
                    app:rippleColor="@color/backgroundColor"
                    app:shapeAppearance="@style/ShapeAppearance.MyFestival.Button.Home" />

            </androidx.gridlayout.widget.GridLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:gravity="center"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/festival_chooser_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{FestivalChooserHandler::onClick}"
                android:padding="10dp"
                android:text="@string/festicalChooser"
                android:textColor="?attr/colorPrimary"
                android:textSize="15dp"
                app:backgroundTint="@color/colorOnBackground"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:rippleColor="@color/backgroundColor"
                app:shapeAppearance="@style/ShapeAppearance.MyFestival.Button.Home" />

        </LinearLayout>
    </LinearLayout>

</layout>