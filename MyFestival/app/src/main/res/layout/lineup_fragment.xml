<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="previousDayHandler" type="android.view.View.OnClickListener" />
        <variable name="nextDayHandler" type="android.view.View.OnClickListener" />
        <variable name="viewModel" type="be.ugent.myfestival.viewmodels.LineupViewModel" />
    </data>
    <FrameLayout
        android:id="@+id/lineup_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="10">

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:id="@+id/buttons_layout"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_weight="9"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/backgroundColor">
                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/stage_viewer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="4dp"/>

            </RelativeLayout>

        </LinearLayout>



    </FrameLayout>
</layout>