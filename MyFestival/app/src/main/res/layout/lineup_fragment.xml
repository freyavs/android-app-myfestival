<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<data>
</data>
    <FrameLayout
        android:id="@+id/lineup_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="10">

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <Button
                        android:layout_weight="1"
                        android:id="@+id/previous_day_button"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="@string/previous_day_button_text"
                        android:textSize="40sp"
                        android:textStyle="bold"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        />

                    <TextView
                        android:id="@+id/day"
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="Donderdag"
                        android:textSize="40sp"
                        android:gravity="center"
                        android:textStyle="bold"/>

                    <Button
                        android:layout_weight="1"
                        android:id="@+id/next_day_button"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="@string/next_day_button_text"
                        android:textSize="40sp"
                        android:textStyle="bold"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        />
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_weight="9"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/day_recycler"
                    android:padding="4dp"
                    android:clipToPadding="false"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:listitem="@layout/stage_item"
                    />

            </RelativeLayout>

        </LinearLayout>



    </FrameLayout>
</layout>